{
    "main": "./dist/extension.js",
    "name": "marble-language-support",
    "displayName": "Marble Language Support",
    "description": "Language support for the Marble programming language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "marble",
                "aliases": [
                    "Marble",
                    "marble"
                ],
                "extensions": [
                    "mrbl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "marble",
                "scopeName": "source.marble",
                "path": "./marble.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "9.0.1"
    },
    "devDependencies": {
        "@types/node": "^17.0.18",
        "@vscode/vsce": "^3.2.1",
        "vscode-test": "^1.3.0",
        "@types/vscode": "1.85.0",
        "typescript": "5.4.5",
        "esbuild": "^0.24.2"
    },
    "scripts": {
        "compile": "npm run check-types && node esbuild.js --production && npm run build-server",
        "check-types": "tsc --noEmit",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "vsce package --no-dependencies",
        "build-server": "cargo install --path ../marble-language-server --root server"
    }
}