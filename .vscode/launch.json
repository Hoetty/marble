    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'marble'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=marble"
                ],
                "filter": {
                    "name": "marble",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'imarble'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=imarble",
                    "--package=marble"
                ],
                "filter": {
                    "name": "imarble",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'imarble'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=imarble",
                    "--package=marble"
                ],
                "filter": {
                    "name": "imarble",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "cwd": "${workspaceFolder}/marble-lsp",
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "${workspaceFolder}/marble-samples"
            ]
        }
    ]
}